rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read and write their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Notification settings - users can read and write their own settings
    match /notification_settings/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Notifications - users can read and write their own notifications
    match /notifications/{userId}/user_notifications/{notificationId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow users to read their own notifications collection
    match /notifications/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Admin notifications - only admins can read and write
    match /admin_notifications/{notificationId} {
      allow read, write: if request.auth != null && request.auth.uid == 'ADMIN_USER_ID';
    }
    
    // Allow read access to all authenticated users for other collections
    match /{document=**} {
      allow read: if request.auth != null;
    }
  }
} 